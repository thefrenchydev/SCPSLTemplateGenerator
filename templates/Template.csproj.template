<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <OutputType>Library</OutputType>
    <RootNamespace>{{Namespace}}</RootNamespace>
    <AssemblyName>{{PluginName}}</AssemblyName>
    <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
    <NoWarn>NU1903</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Northwood.LabAPI" Version="1.1.4" />
  </ItemGroup>

  <!-- Force highest versions to resolve RAR conflicts -->
  <ItemGroup>
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
    <PackageReference Include="System.Memory" Version="4.5.5" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
{{DependencyReferences}}
  </ItemGroup>
  
  <PropertyGroup>
    <LabApiPluginDir>$(AppData)\SCP Secret Laboratory\LabAPI\plugins\7777\</LabApiPluginDir>
  </PropertyGroup>

  <!-- Dependencies copy into the local dedicated server plugins dir  -->
  <Target Name="CopyPluginToLabApi" AfterTargets="Build">
    <MakeDir Directories="$(LabApiPluginDir)" Condition="!Exists('$(LabApiPluginDir)')" />

    <Message Text="Copying $(TargetPath) ? $(LabApiPluginDir)" Importance="High" />

    <Copy SourceFiles="$(TargetPath)"
          DestinationFolder="$(LabApiPluginDir)"
          SkipUnchangedFiles="true"
          Retries="3"
          RetryDelayMilliseconds="300" />

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
      <DebugSymbols Include="$(TargetDir)$(AssemblyName).pdb" Condition="Exists('$(TargetDir)$(AssemblyName).pdb')" />
      <XmlDocs Include="$(TargetDir)$(AssemblyName).xml" Condition="Exists('$(TargetDir)$(AssemblyName).xml')" />
    </ItemGroup>
    <Copy SourceFiles="@(DebugSymbols);@(XmlDocs)"
          DestinationFolder="$(LabApiPluginDir)"
          SkipUnchangedFiles="true"
          Condition="'$(Configuration)' == 'Debug' AND '@(DebugSymbols);@(XmlDocs)' != ';'" />
    
    <Message Text="Debug build: PDB files included for debugging" Condition="'$(Configuration)' == 'Debug'" Importance="Normal" />
    <Message Text="Release build: PDB files excluded for production" Condition="'$(Configuration)' == 'Release'" Importance="Normal" />
  </Target>
</Project>
